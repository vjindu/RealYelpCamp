<% include ../partials/header.ejs %>

<div class = "container">
    <div class = "row">

        <h1 style = "text-align: center">Edit the Campground</h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action= "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type="text" name="campGnd[name]" value="<%= campground.name %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name="campGnd[image]" value="<%= campground.image %>">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type="text" name="campGnd[description]" value= "<%= campground.description %>" >
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit"> Submit </button>
            </form>
            <div style = "margin: 25px auto">
                <a href="/campgrounds/<%=campground._id%>"> return to the Camp Ground</a>
            </div>
        </div>

    </div>
</div>

