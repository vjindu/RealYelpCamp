<% include partials/header.ejs %>

<h1> <%= campground.name %></h1>


<div>
<img src="<%= campground.image%>" >

<!--<img src="/images/img_02.jpg" alt=""> -->
</div>

<p> <%= campground.description %></p>

<!-- Display all the comments and the author -->
<% campground.comments.forEach(function(comment){ %>
    <p> 
       <strong> <%= comment.author %> </strong>  - <%= comment.comment %>       
    </p>

<% }); %>

<div style = "width: 30%; margin: 25px auto;">
    <div class = "form-group">
        <input class = "form-control" type="text" name="author" value="enter your name">
    </div>
    <div class = "form-group">
        <input class = "form-control" type="text" name="description" value="enter comments">
    </div>
</div>
<a href="/campgrounds"> Return back to campgrounds </a>

<% include partials/footer.ejs %>